<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/articles_table_list_container"
    android:background="?android:attr/selectableItemBackground"
    app:alignItems="center"
    android:clickable="true"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/articles_table_list_image"
        app:layout_minWidth="8dp"
        app:layout_minHeight="8dp"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        app:srcCompat="@drawable/unread_solid_circle"/>

    <TextView
        android:id="@+id/articles_table_list_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/normalTextColor"
        android:text="لورم ایپسوم لیست"
        />


</com.google.android.flexbox.FlexboxLayout>